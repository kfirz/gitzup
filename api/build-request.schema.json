{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://gitzup.com/v1/build-request.schema.json",
    "description": "A build request.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "resources"
    ],
    "properties": {
        "resources": {
            "description": "List of resources to be applied as part of this build request.",
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "[a-z][a-zA-Z0-9_-][a-z]": {
                    "$ref": "http://gitzup.com/v1/resource.schema.json"
                }
            }
        }
    }
}
