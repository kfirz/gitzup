{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://gitzup.com/v1/protocol/init.request.schema.json",
    "description": "Resource protocol 'init' request.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "resource"
    ],
    "properties": {
        "resource": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "id",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "[a-z][-a-zA-Z0-9]+"
                },
                "type": {
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    }
}
