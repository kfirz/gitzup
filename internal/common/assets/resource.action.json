{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://gitzup.com/schema/v1/action.json",
  "description": "Resource protocol 'action'.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "image"
  ],
  "properties": {
    "image": {
      "type": "string",
      "pattern": "^[^:]+(?::[^:]+)?$"
    },
    "entrypoint": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cmd": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
