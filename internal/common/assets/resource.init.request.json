{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://gitzup.com/schema/v1/init.request.json",
  "description": "Resource protocol 'init' request.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "requestId",
    "resource"
  ],
  "properties": {
    "requestId": {
      "type": "string",
      "minLength": 1
    },
    "resource": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "[a-z][-a-zA-Z0-9]+"
        },
        "type": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
